<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.competition.competitionDetail.TournamentDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_tournament_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/black_gradient_game_list_rounded_rectangle"
            app:layout_constraintBottom_toBottomOf="@id/iv_tournament_thumbnail"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_tournament_thumbnail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/darker_gray"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tournament_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_tournament_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/competition_icon"
                        android:padding="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/cl_tournament_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingStart="10dp">
                    <TextView
                        android:id="@+id/tv_recommendation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Recommendation"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/purple_200"
                        android:lineSpacingExtra="-3sp"
                        />
                    <TextView
                        android:id="@+id/tv_tournament_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Legends Professional League"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:lineSpacingExtra="-3sp"
                        android:layout_marginTop="-5sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_recommendation"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_tournament_name"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/btn_tournament_join"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Join"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:background="@drawable/button_purple"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/gap"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <View
                            android:id="@+id/gap"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toEndOf="@id/btn_tournament_join"
                            app:layout_constraintEnd_toStartOf="@id/btn_tournament_favorite"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/btn_tournament_favorite"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_purple"
                            android:padding="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_love"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_tournament_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cl_headline"
                android:layout_marginTop="20dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_tournament_type"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_tournament_type"/>
                    <TextView
                        android:id="@+id/tv_tournament_summary_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        android:layout_marginBottom="-6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type"
                        android:textSize="8dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:id="@+id/view_gap_type"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ll_tournament_type"
                    app:layout_constraintEnd_toStartOf="@id/ll_tournament_scene"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_tournament_scene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_gap_type"
                    app:layout_constraintEnd_toStartOf="@id/view_gap_scene"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/scene"/>
                    <TextView
                        android:id="@+id/tv_tournament_summary_scenes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pro"
                        android:layout_marginBottom="-6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="scene"
                        android:textSize="8dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:id="@+id/view_gap_scene"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ll_tournament_scene"
                    app:layout_constraintEnd_toStartOf="@id/ll_tournament_prizepool"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_tournament_prizepool"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/view_gap_prizepool"
                    app:layout_constraintStart_toEndOf="@id/view_gap_scene"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/trophy" />

                    <TextView
                        android:id="@+id/tv_tournament_summary_prizepool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Rp20Bil"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="prizepool"
                        android:textColor="@color/white"
                        android:textSize="8dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/view_gap_prizepool"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@drawable/rounded_rectangle_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ll_tournament_prizepool"
                    app:layout_constraintEnd_toStartOf="@id/ll_tournament_quota"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_tournament_quota"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_tournament_quota"/>
                    <TextView
                        android:id="@+id/tv_tournament_summary_quota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/20"
                        android:layout_marginBottom="-6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="quota"
                        android:textSize="8dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_tournament_game_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cl_tournament_summary"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Games"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/purple_200"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_tournament_game"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_tournament_game_icon"
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_tournament_game_icon"
                                app:circularflow_radiusInDP="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/games"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/rounded_imageView"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintStart_toEndOf="@id/cl_tournament_game_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:paddingStart="10dp">
                            <TextView
                                android:id="@+id/tv_tournament_game_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Legends : Bang Bang"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:lineSpacingExtra="-3sp"
                                android:layout_marginTop="-5sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:id="@+id/tv_tournament_game_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2010"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/purple_200"
                                app:layout_constraintTop_toBottomOf="@id/tv_tournament_game_name"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:id="@+id/tv_tournament_game_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Legends: Bang Bang is a multiplayer online battle arena (MOBA) game designed for mobile phones. The game is free-to-play and is only monetized through in-game purchases like characters and skins."
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/white"
                                android:textSize="8dp"
                                app:layout_constraintTop_toBottomOf="@id/tv_tournament_game_year"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                app:layout_constraintBottom_toBottomOf="parent">
                                <TextView
                                    android:id="@+id/btn_tournament_check_game"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="check out more"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:background="@drawable/button_purple"
                                    app:layout_constraintTop_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_tournament_game_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Information"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/purple_200"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/purple_200"
                                android:textSize="9dp"
                                android:layout_marginBottom="-3dp"/>
                            <TextView
                                android:id="@+id/tv_tournament_more_information_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Jl. Tanjung Duren Barat III No.1, RT.9/RW.5, Tj. Duren Utara, Kec. Grogol petamburan, Kota Jakarta Barat, Daerah Khusus Ibukota Jakarta 11470"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_tournament_info_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/ll_tournament_info_2"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/scene"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Scene"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/purple_200"
                                        android:textSize="9dp"
                                        android:layout_marginBottom="-3dp"/>
                                    <TextView
                                        android:id="@+id/tv_tournament_more_information_scene"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Pro Scene"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_tournament_quota"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quota"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/purple_200"
                                        android:textSize="9dp"
                                        android:layout_marginBottom="-3dp"/>
                                    <TextView
                                        android:id="@+id/tv_tournament_more_information_quota"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="5/20 Team"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_entry_price"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Entry Price"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/purple_200"
                                        android:textSize="9dp"
                                        android:layout_marginBottom="-3dp"/>
                                    <TextView
                                        android:id="@+id/tv_tournament_more_information_entry_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Rp2.000.000/team"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tournament_info_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ll_tournament_info_1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/member_requirement"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Member Requirement"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/purple_200"
                                        android:textSize="9dp"
                                        android:layout_marginBottom="-3dp"/>
                                    <TextView
                                        android:id="@+id/tv_tournament_more_information_member_requirement"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="5 people/team"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_tournament_type"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Type"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textColor="@color/purple_200"
                                        android:textSize="9dp"
                                        android:layout_marginBottom="-3dp"/>
                                    <TextView
                                        android:id="@+id/tv_tournament_more_information_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Offline"
