<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.forum.createForum.CreateForumFragment"
    android:background="@color/darker_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_3_item_layout"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Forum's title"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/et_forum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forum's Thumbnail"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/btn_proof_of_payment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/add_button"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add" />
        </LinearLayout>
        <EditText
            android:id="@+id/et_forum_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:hint="Type or paste whatâ€™s on your mind"
            android:textSize="15dp"
            android:textColorHint="@color/light_gray"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>