<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".home.competition.successPayDialog.SuccessPayDialog"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingVertical="30dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/rounded_rectangle_white_purple_corner">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_circle_checked"/>
    <TextView
        android:id="@+id/tv_headMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully Join"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/ll_firstMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prepare to War!"
            android:fontFamily="@font/poppins_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Good Luck."
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_secondMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the process will take 1x24 hours"
        android:fontFamily="@font/poppins_bold"/>
</LinearLayout>