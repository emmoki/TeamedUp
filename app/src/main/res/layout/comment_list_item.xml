<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/dark_gray_square_box">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginEnd="10dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_author_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pp_member"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/round_imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/purple_300"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MPL_Indonesia_official"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11dp"
            android:layout_marginBottom="-2dp"
            android:layout_marginEnd="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_verified"
            android:layout_marginEnd="10dp"/>
        <View
            android:visibility="gone"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/gray_circle"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11sp"
            android:layout_marginBottom="-2dp"
            android:textColor="@color/light_gray"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The newest Marksman hero, Ixia, has arrived! Explore the hero bundle that is also available, containing the hero and her first skin! Buy the bundle with only 469 Diamonds in launch week. You can also buy the skin at a price of ONLY 51 Diamonds for the first fortnight!"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="11dp"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_thumbs_up"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/tv_upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1.7k"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_thumbs_down"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/tv_down_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1.7k"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

</LinearLayout>